<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<FlowPane id="friendsListWindow"
          stylesheets="@/css/friendsListWindow.css"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.ssp.controllers.FriendsListWindow"
          prefHeight="600"
          prefWidth="600"
          alignment="BASELINE_CENTER">

    <VBox id="backBox">

        <ImageView id="backButton"
                   fitHeight="30"
                   fitWidth="30"
                   preserveRatio="true"
                   onMouseClicked="#backButtonClicked"/>
    </VBox>

    <VBox alignment="CENTER" spacing="20">

        <Label
                id="friendsListLabel"
                text="FRIENDS"/>
        <TabPane>

            <Tab text="Friends">
                <TableView id="friendsListBox">
                    <columns>
                        <TableColumn id="friendsListTextFormat"
                                     text="Username"
                                     prefWidth="150"/>
                        <TableColumn id="friendsListTextFormat"
                                     text="Wins"
                                     prefWidth="50"/>
                        <TableColumn id="friendsListTextFormat"
                                     text="Losses"
                                     prefWidth="50"/>
                    </columns>
                </TableView>
            </Tab>

            <Tab text="Recent">
                <TableView>
                    <columns>
                        <TableColumn id="friendsListTextFormat"
                                     text="Username"
                                     prefWidth="150"/>
                        <TableColumn id="friendsListTextFormat"
                                     text="Matches"
                                     prefWidth="50"/>
                        <TableColumn id="friendsListTextFormat"
                                     text="W/L"
                                     prefWidth="50"/>
                    </columns>
                </TableView>
            </Tab>

            <Tab text="Requests">
                <TableView>
                    <columns>
                        <TableColumn id="friendsListTextFormat"
                                     text="Username"
                                     prefWidth="150"/>
                    </columns>
                </TableView>
            </Tab>
        </TabPane>
    </VBox>
</FlowPane>
