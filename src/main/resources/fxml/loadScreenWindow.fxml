<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.control.Button?>

<FlowPane id="loadWindow"
          stylesheets="@/css/mainWindow.css"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.ssp.controllers.LoadScreenWindow"
          prefHeight="600.0"
          prefWidth="600.0"
          alignment="CENTER">

    <VBox alignment="CENTER">

        <ImageView id="rpsGif"
                   fitWidth="500"
                   fitHeight="500"/>

        <Label text="LOADING"
               id="loadLabel"
               fx:id="loadLabel"
               alignment="BOTTOM_CENTER"/>

        <Button id="showResultBtn"
                fx:id="showResultBtn"
                text="Show result"
                visible="false"
                onMouseClicked="#showResultBtnClicked"/>

    </VBox>

</FlowPane>
