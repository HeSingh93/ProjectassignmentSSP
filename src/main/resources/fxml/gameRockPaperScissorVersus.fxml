<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<FlowPane xmlns="http://javafx.com/javafx"
          stylesheets="@/css/gameRockPaperScissorWindow.css"
          id="gameWindow"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.ssp.controllers.GameRockPaperScissorVersus"
          prefHeight="600.0"
          prefWidth="600.0"
          alignment="TOP_CENTER">

    <VBox alignment="CENTER" fx:id="midBox">
        <Label id="pickMove"
               fx:id="pickMove"
               text="PICK YOUR MOVE"/>

        <ImageView id="rock"
                   fitHeight="170"
                   fitWidth="170"
                   preserveRatio="true"
                   onMouseClicked="#rockClicked"
                   fx:id="rockView"/>

        <ImageView id="paper"
                   fitHeight="200"
                   fitWidth="200"
                   preserveRatio="true"
                   onMouseClicked="#paperClicked"
                   fx:id="paperView"/>

        <ImageView id="scissors"
                   fitHeight="200"
                   fitWidth="200"
                   preserveRatio="true"
                   onMouseClicked="#scissorsClicked"
                   fx:id="scissorView"/>

    </VBox>

    <VBox fx:id="replacementBox" alignment="CENTER">

        <Button text="MAIN MENU" id="mainMenuBtn" fx:id="mainMenuBtn" onMouseClicked="#mainMenuBtnClicked" visible="false"/>

    </VBox>

</FlowPane>