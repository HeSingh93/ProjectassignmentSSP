<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<FlowPane xmlns:fx="http://javafx.com/fxml"
          id="addFriendsWindow"
          stylesheets="@/css/addFriendsWindow.css"
          xmlns="http://javafx.com/javafx"
          fx:controller="com.example.ssp.controllers.AddFriendsWindow"
          prefHeight="600"
          prefWidth="600"
          alignment="CENTER">

    <VBox alignment="CENTER"
          spacing="20">

        <Label id="addFriendsLabel"
               text="ADD FRIEND"/>

        <TextField id="addFriendsUserNameTextField"
                   fx:id="addFriendsUserNameTF"
                   promptText="Username"/>

        <Button id="addFriendsBtn"
                fx:id="addFriendsBtn"
                onMouseClicked="#addFriendsBtnClicked"
                text="SEND REQUEST"/>

        <ImageView id="backButton"
                   onMouseClicked="#backButtonClicked"
                   fitHeight="30"
                   fitWidth="30"
                   preserveRatio="true"/>

        <Label id="promptLabel"
               fx:id="promptLabel"
               text="Enter the username of the friend you would like to add"/>

    </VBox>

</FlowPane>
