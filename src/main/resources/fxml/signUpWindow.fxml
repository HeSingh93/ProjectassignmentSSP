<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<FlowPane id="signUpWindow"
          stylesheets="@/css/signUpWindow.css"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.ssp.controllers.SignUpWindow"
          prefHeight="600"
          prefWidth="600"
          alignment="CENTER">

    <VBox alignment="CENTER"
          spacing="20">

        <ImageView id="backButton"
                   fitHeight="30"
                   fitWidth="30"
                   preserveRatio="true"
                   onMouseClicked="#backButtonClicked"/>

        <Label id="signUpLabel"
               text="SIGN UP"/>

        <TextField id="signUpUsernameTextField"
                   fx:id="signUpUserNameTextField"
                   promptText="Username"/>

        <TextField id="signUpPasswordTextField"
                   fx:id="signUpPasswordTextField"
                   promptText="Password"/>

        <Button id="createAccountBtn"
                text="Create Account"
                onMouseClicked="#createAccountClicked"/>

    </VBox>

</FlowPane>
