<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<FlowPane xmlns="http://javafx.com/javafx"
          id="playRandomWindow"
          stylesheets="@/css/playRandomWindow.css"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.ssp.controllers.playRandomWindow"
          prefHeight="600.0"
          prefWidth="600.0"
          alignment="BASELINE_CENTER">

    <VBox spacing="10">
        <ImageView id="backButton"
                   fitHeight="30"
                   fitWidth="30"
                   preserveRatio="true"
                   onMouseClicked="#backButtonClicked"/>
    </VBox>

    <VBox id="mid" spacing="10" alignment="BASELINE_CENTER">
        <ImageView id="random"
                   fitWidth="400"
                   fitHeight="400"
                   preserveRatio="true"
                   onMouseClicked="#randomClicked"/>
    </VBox>

</FlowPane>
