<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<FlowPane id="mainWindow"
          stylesheets="@/css/mainWindow.css"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.ssp.controllers.MainWindow"
          prefHeight="600"
          prefWidth="600"
          alignment="TOP_CENTER">

    <VBox alignment="CENTER" spacing="20">
        <ImageView id="topImage"/>

        <Button id="newGameBtn"
                onMouseClicked="#newGameBtnClicked"
                text="NEW GAME"/>
        <Button id="friendsBtn"
                onMouseClicked="#friendsBtnClicked"
                text="FRIENDS"/>
        <Button id="recentGamesBtn"
                onMouseClicked="#recentBtnClicked"
                text="RECENT GAMES"/>
        <Button id="helpBtn"
                onMouseClicked="#helpBtnClicked"
                text="HELP"/>

    </VBox>

</FlowPane>
